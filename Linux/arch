#change /etc/pacman.conf first
sudo pacman -S reflector  #reflector is used to get fastest mirrors in Arch
sudo cp /etc/pacman.d/mirrorlist /home/rayuga/Documents/Backup/etc/pacman.d/mirrorlist.bak #make backup of mirrorlist
sudo reflector --verbose --latest 10 --protocol https --sort rate --save /etc/pacman.d/mirrorlist #reflector command to get fastest mirror server
sudo pacman -Syu #update pacman database

sudo pacman -S firefox flatpak bluez blueman bluez-utils intel-ucode jdk-openjdk #bluez blueman bluez-utils are essentials for enabling bluetooth service, intel-ucode used for intel microcodes
sudo modprobe btusb
sudo systemctl start bluetooth #start bluetooth service
